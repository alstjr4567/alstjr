package array;

import java.util.Scanner;

public class Array03 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("배열 크기 입력 : ");
		int size = sc.nextInt();
		
		int[] ar = new int[size];
		
		for(int i=0;i<size;i++) {
		System.out.println("ar["+i+"] 입력 :");
		ar[i]=sc.nextInt();
		
		}
	}
}
/*
배열 크기 입력 : 3

ar[0] 입력 : 25
ar[1] 입력 : -50
ar[2] 입력 : 78

25 - 50 78
합 = ?


 */
